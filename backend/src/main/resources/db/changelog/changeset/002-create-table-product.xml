<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="002" author="Mikhail Kondrashin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="product"/>
            </not>
        </preConditions>
        <createTable tableName="product">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="registration_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="selling" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="owner_login" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addDefaultValue tableName="product" columnName="deleted" defaultValueBoolean="false"/>
        <addDefaultValue tableName="product" columnName="selling" defaultValueBoolean="false"/>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="owner_login"
                                 constraintName="product_owner_fk"
                                 referencedTableName="app_user"
                                 referencedColumnNames="login"/>
    </changeSet>

</databaseChangeLog>
