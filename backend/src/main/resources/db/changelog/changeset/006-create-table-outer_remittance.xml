<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="006" author="Mikhail Kondrashin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="outer_remittance"/>
            </not>
        </preConditions>
        <createTable tableName="outer_remittance">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="amount" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="wallet_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="outer_remittance"
                                 baseColumnNames="wallet_id"
                                 constraintName="outer_remittance_wallet_fk"
                                 referencedTableName="wallet"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>