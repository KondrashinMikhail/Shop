<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="003" author="Mikhail Kondrashin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="wallet"/>
            </not>
        </preConditions>
        <createTable tableName="wallet">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="balance" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="owner_login" type="varchar">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addColumn tableName="app_user">
            <column name="wallet_id" type="uuid"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="wallet"
                                 baseColumnNames="owner_login"
                                 constraintName="owner_wallet_fk"
                                 referencedTableName="app_user"
                                 referencedColumnNames="login"/>
        <addForeignKeyConstraint baseTableName="app_user"
                                 baseColumnNames="wallet_id"
                                 constraintName="wallet_owner_fk"
                                 referencedTableName="wallet"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>