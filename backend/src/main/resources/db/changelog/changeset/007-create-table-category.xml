<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="007" author="Mikhail Kondrashin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="category"/>
            </not>
        </preConditions>
        <createTable tableName="category">
            <column name="name" type="varchar">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="min_price" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="max_price" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="average_price" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="min_average_price" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="max_average_price" type="numeric">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addColumn tableName="product">
            <column name="category_name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="category_name"
                                 constraintName="product_category_fk"
                                 referencedTableName="category"
                                 referencedColumnNames="name"/>
    </changeSet>

</databaseChangeLog>